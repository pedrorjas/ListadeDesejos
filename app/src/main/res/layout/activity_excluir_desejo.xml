<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_detalhes_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="ID"
        android:textSize="18sp"
        android:gravity="center|left"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/excluir_produto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/excluir_categoria"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/excluir_precoMin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/excluir_precoMax"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/excluir_loja_achar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp" />

    <ListView
        android:id="@+id/lv_desejos_excluir"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1" />
</LinearLayout>
